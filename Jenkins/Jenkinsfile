pipeline {
    agent any
    stages {
       stage('---clean---') {
                steps {
                 dir("project") {
                    bat "mvn clean -X"
                }
            }
        }
        stage('--test--') {
            steps {
                dir("project") {
                    bat "mvn test"
                }
            }
        }
        stage('--package--') {
            steps {
                dir("project") {
                    bat "mvn package"
                }
            }
        }
    }
}
