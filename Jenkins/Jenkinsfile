pipeline {
    agent any
    stages {
		dir ('subdir') {
			bat "cd project"
		}
        stage('---clean---') {
            steps {
                bat "mvn -f project/pom.xml clean"
            }
        }
        stage('--test--') {
            steps {
                bat "mvn -f project/pom.xml test"
            }
        }
        stage('--package--') {
            steps {
                bat "mvn -f project/pom.xml package"
            }
        }
    }
}
